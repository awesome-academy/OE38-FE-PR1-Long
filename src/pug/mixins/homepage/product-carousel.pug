mixin carouselButtons(id)
    button.carousel-control.carousel-control-prev(
        type="button",
        data-bs-target=`#${id}` 
        data-bs-slide="prev"
    )
        img(src=`${pagesAssetSrc}/icons/carousel-prev.svg`, alt='Prev')
    button.carousel-control.carousel-control-next(
        type="button",
        data-bs-target=`#${id}`,
        data-bs-slide="next"
    )  
        img(src=`${pagesAssetSrc}/icons/carousel-next.svg`, alt='Next')
